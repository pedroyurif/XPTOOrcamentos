@model IEnumerable<XPTOOrcamentos.Models.Cliente>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Clientes</h1>

<br />
<div class="col-md-12">
    <div class="row">
        <div class="col-3">
            <input class="form-control" type="text" id="myInput" onkeyup="myFunction()" placeholder="Filtro">
        </div>
        <div class="col-7"></div>
        <div class="col-2">
            <p>
                <a asp-action="Create">Novo Cliente</a>
            </p>
        </div>
    </div>
</div>
<br />
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CNPJ)
            </th>
            <th>Ativo</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CNPJ)
                </td>
                @if (item.Ativo)
                {
                    <td class="concluido">Ativo</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Detalhes</a> |
                        <a asp-action="Activate" asp-route-id="@item.ID">Inativar</a>
                    </td>
                }
                else
                {
                    <td class="nconcluido">Inativo</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Detalhes</a> |
                        <a asp-action="Activate" asp-route-id="@item.ID">Ativar</a>
                    </td>
                }

            </tr>
        }
    </tbody>
</table>