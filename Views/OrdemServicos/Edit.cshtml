@model XPTOOrcamentos.Models.OrdemServico

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Ordem Serviço</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="TituloServico" class="control-label"></label>
                <input asp-for="TituloServico" class="form-control" />
                <span asp-validation-for="TituloServico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteID" class="control-label"></label>
                <select asp-for="ClienteID" class="form-control" asp-items="ViewBag.ClienteID"></select>
                <span asp-validation-for="ClienteID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrestadorID" class="control-label"></label>
                <select asp-for="PrestadorID" class="form-control" asp-items="ViewBag.PrestadorID"></select>
                <span asp-validation-for="PrestadorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataExecucao" class="control-label"></label>
                <input asp-for="DataExecucao" class="form-control" />
                <span asp-validation-for="DataExecucao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
